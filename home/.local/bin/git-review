#!/bin/sh
#
# Reviews a branch from the default remote.

set -e


##
# The remote from which to merge.
remote="$(git default-remote)"

##
# The branch to merge.
branch="$remote/$1"

##
# The target branch.
target="$(git default-branch)"


# The start commit is the merge base for the default branch and the feature
# branch
start_commit="$(git merge-base "$target" "$branch")"

git dc --ignore-all-space "$start_commit".."$branch"
