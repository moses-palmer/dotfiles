#!/bin/sh
#
# Reviews a branch from the default remote.

set -e


##
# The remote from which to merge.
remote="$(git default-remote)"

##
# The branch to merge.
branch="$remote/$1"

##
# The target branch.
target="${2-$(git default-branch)}"


git lc --ignore-all-space --reverse "$remote/$target".."$branch"
