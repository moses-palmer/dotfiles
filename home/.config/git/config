[alias]
    amend = commit --amend
    ap = add -p
    changes = log @{upstream}..HEAD
    cl = stash --keep-index
    co = checkout
    cop = checkout -p
    cp = cherry-pick
    dc = !git-dc
    default-branch = !git-default-branch
    default-remote = !git-default-remote
    div = !git-div
    fix = commit --fixup
    gh-pr = !git-gh-pr
    gh-review = !git-gh-review
    goto = !git-goto
    logg = log --graph --decorate
    lg = log --graph --decorate --oneline
    ls = ls-tree --name-only HEAD
    rep = reset -p
    reshape = !git-reshape
    return = !git-return
    review = !git-review
    sc = !git-sc
    st = status
    subpull = submodule foreach --recursive git pull --all
    transplant = !git-transplant
    wip = !git-wip
[user]
    name = Moses Palm√©r
    email = mosespalmer@gmail.com
[core]
    editor = vim
    whitespace = blank-at-eol,blank-at-eof,space-before-tab
    filemode = false
    tabwidth = 4
    pager = less -S

[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = green
    changed = yellow
    untracked = cyan

[apply]
    whitespace = fix
[credential]
    helper = cache
[init]
   templatedir = ~/.config/git/templates
[pull]
   rebase = true
[push]
    default = simple
[rebase]
    autosquash = true
