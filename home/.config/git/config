[core]
    attributesFile = ~/.config/git/attributes
    editor = vim
    filemode = false
    pager = git-pager
    tabwidth = 4
    whitespace = blank-at-eol,blank-at-eof,space-before-tab

[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = green
    changed = yellow
    untracked = cyan

[apply]
    whitespace = fix
[commit]
    verbose = true
[credential]
    helper = cache
[diff]
    colorMoved = default
[init]
   templatedir = ~/.config/git/templates
[interactive]
    diffFilter = git-diff-filter
[merge]
    conflictstyle = diff3
[pull]
   rebase = true
[push]
    default = simple
[rebase]
    autosquash = true
    autostash = true

[delta]
    features = line-numbers decorations
    whitespace-error-style = 22 reverse
    syntax-theme = OneHalfDark

[delta "decorations"]
    file-style = bold yellow
    file-decoration-style = none

[tig]
    line-graphics = utf-8
    truncation-delimiter = utf-8
    ignore-space = all
    ignore-case = smart
    main-view = id commit-title:graph=v2
