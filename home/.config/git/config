[alias]
    amend = commit --amend
    ap = add -p
    changes = log @{upstream}..HEAD
    cl = stash --keep-index
    co = checkout
    cop = checkout -p
    cp = cherry-pick
    dc = !git-dc
    default-branch = !git-default-branch
    default-remote = !git-default-remote
    div = !git-div
    features = log --first-parent
    fire = !git-fire
    fix = commit --fixup
    gh-pr = !git-gh-pr
    gh-review = !git-gh-review
    goto = !git-goto
    l = log --oneline
    logg = log --graph --decorate
    logs = !git-logs
    lg = log --graph --decorate --oneline
    ls = ls-tree --name-only HEAD
    own = !git-own
    reb = rebase -i --rebase-merges
    rep = reset -p
    reshape = !git-reshape
    ret = !git-ret
    review = !git-review
    sc = !git-sc
    st = status
    subpull = submodule foreach --recursive git pull --all
    staged = !git-staged
    tar = !git-tar
    transplant = !git-transplant
    vat = !git-vat
    wip = !git-wip
