[alias]
    ap = add -p
    changes = log @{upstream}..HEAD
    co = checkout
    cop = checkout -p
    cp = cherry-pick
    dc = !git-dc
    default-branch = !git-default-branch
    logg = log --graph --decorate
    ls = ls-tree --name-only HEAD
    reshape = !git-reshape
    st = status
    subpull = submodule foreach --recursive git pull --all
[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = green
    changed = yellow
    untracked = cyan
[rebase]
    autosquash = true
[core]
    editor = vim
    whitespace = blank-at-eol,blank-at-eof,space-before-tab
    filemode = false
    tabwidth = 4
    pager = less -S
[apply]
    whitespace = fix
[push]
    default = simple
[credential]
    helper = cache
