set expandtab
set hidden
set nocompatible
set shiftwidth=4
set smarttab
set tabstop=4
set updatetime=250


" Enable syntax highlighting; this may not be set in the global resource file
if has("syntax")
  syntax on
endif


" Enable backspace
set backspace=indent,eol,start


" Include library functions
exe 'source' '~/.config/vim/lib.vim'


" Load vundle and all plugins
set rtp+=~/.vim/bundle/Vundle.vim
filetype off
call vundle#begin()
Plugin 'VundleVim/Vundle.vim'

for f in split(glob('~/.config/vim/plugins/*.vim'), '\n')
    exe 'source' f
endfor

call vundle#end()
filetype plugin indent on


" Load custom extensions
for f in split(glob('~/.config/vim/extensions/*.vim'), '\n')
    exe 'source' f
endfor
