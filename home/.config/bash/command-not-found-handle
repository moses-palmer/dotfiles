# The git commands to wrap
GIT_COMMANDS=( \
    "commit" \
    "lc" \
    "log" \
    "logg" \
    "push" \
    "rebase" \
    "show" \
    "sc" \
    "st" \
)


# Allow falling back on the previous definition
if declare -f command_not_found_handle >/dev/null; then
    eval "previous_$(declare -f command_not_found_handle)"
else
    previous_command_not_found_handle() {
        echo "bash: $1: command not found..."
    }
fi


##
# Overrides the handler for command not found to allow for git shortcuts.
command_not_found_handle() {
    if [[ " ${GIT_COMMANDS[@]} " =~ " $1 " ]] \
            && git rev-parse --git-dir > /dev/null 2>&1; then
        git "$@"
    else
        previous_command_not_found_handle "$@"
    fi
}
